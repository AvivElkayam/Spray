<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bahri.spray.Controller.SprayToActivity"
    android:background="@drawable/orange_background">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Spray To All"
        android:id="@+id/spray_to_all_button"
        android:layout_marginTop="138dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pink_button"
        android:textColor="#ffffffff"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Choose Recipient"
        android:id="@+id/choose_recipient_button"
        android:layout_below="@+id/spray_to_all_button"
        android:layout_alignEnd="@+id/spray_to_all_button"
        android:textColor="#ffffffff"
        android:background="@drawable/pink_button"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Spray To Group"
        android:id="@+id/spray_to_group_button"
        android:layout_below="@+id/choose_recipient_button"
        android:layout_alignEnd="@+id/choose_recipient_button"
        android:background="@drawable/pink_button"
        android:textColor="#ffffffff" />

</RelativeLayout>
