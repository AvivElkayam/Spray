<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >
    <shape

        android:shape="oval"
        android:useLevel="false" >

        <size
            android:height="96dp"
            android:width="96dp" />
        <gradient
            android:centerColor="#F59025"
            android:centerY="0.50"
            android:endColor="#ffffff"
            android:startColor="#F59025"
            android:type="sweep"
            android:useLevel="false"
            />
    </shape>
</rotate>